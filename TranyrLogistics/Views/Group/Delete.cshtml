@model TranyrLogistics.Models.Group

@{
    ViewBag.Title = "Delete Group";
}

<h3>@ViewBag.Title</h3>
<br />

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Group</legend>

    <div class="table-row">
        <div class="display-label table-cell">
             @Html.DisplayNameFor(model => model.Name)
        </div>
        <div class="display-field table-cell">
            @Html.DisplayFor(model => model.Name)
        </div>
    </div>

    <div class="table-row">
        <div class="display-label table-cell">
            @Html.Raw("Type")
        </div>
        <div class="display-field table-cell">
            @{
                if (Model is TranyrLogistics.Models.Groups.CustomerGroup)
                {
                    @Html.Raw("Customers")
                }
                else
                {
                    @Html.Raw("Service providers")
                }
            }
        </div>
    </div>

    <div class="table-row">
        <div class="display-label table-cell">
             @Html.DisplayNameFor(model => model.Description)
        </div>
        <div class="display-field table-cell">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
