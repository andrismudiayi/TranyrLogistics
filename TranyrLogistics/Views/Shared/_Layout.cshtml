@using TranyrLogistics.Views.Helpers

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Tranyr Logistics</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script src="~/Scripts/jquery-1.9.0.min.js"></script>
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/Scripts/jquery-ui-1.10.0.js"></script>
        <script src="~/Scripts/jquery-ui-timepicker-addon.js"></script>
        <script src="~/Scripts/ckeditor/ckeditor.js"></script>
        <script src="~/Scripts/ckeditor/adapters/jquery.js"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Tranyr Logistics", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.SecureActionLink("Enquiries", "Index", "Enquiry")</li>
                            <li>@Html.SecureActionLink("Customers", "Index", "Customer")</li>
                            <li>@Html.SecureActionLink("Shipments", "Index", "Shipment")</li>
                            <li>@Html.SecureActionLink("Groups", "Index", "Group")</li>
                            <li>@Html.SecureActionLink("Shipping Terms", "Index", "ShippingTerms")</li>
                            <li>@Html.SecureActionLink("Service Providers", "Index", "ServiceProvider")</li>
                            <li>@Html.SecureActionLink("System Users", "Index", "SystemUser")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Tranyr Logistics</p>
                </div>
            </div>
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
