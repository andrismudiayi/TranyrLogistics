@using TranyrLogistics.Views.Helpers;

@model TranyrLogistics.Models.Customer

@{
    ViewBag.Title = "Customer Details";
}

<h3>@ViewBag.Title</h3>
<br />

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Customer</legend>
        
        @{
            if (Model is TranyrLogistics.Models.Customers.Company)
            {
                @Html.Partial("Partials/CompanyDetails");
            }
        }
        
        @{
            if (Model is TranyrLogistics.Models.Customers.Individual)
            {
                @Html.Partial("Partials/IndividualDetails");
            }
        }

        <p>
            @Html.SecureActionLink("Edit", "Edit", "Customer", new { id=Model.ID }) |
            @Html.SecureActionLink("Back to List", "Index")
        </p>

    </fieldset>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
